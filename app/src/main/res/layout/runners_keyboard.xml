<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/button_2"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_1"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_2"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_2"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_3"
            android:textSize="35sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_4"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/button_5"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_4"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_5"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_6"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_5"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_6"
            android:textSize="35sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_7"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/button_8"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_7"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_8"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_8"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_9"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button_8"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_9"
            android:textSize="35sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_separator"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/button_0"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_colon"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_0"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/keyboard_button_selector"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorButtonText"
            android:padding="16dp"
            android:text="@string/keyboard_0"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_del"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/button_0"
            android:background="@drawable/keyboard_button_backspace_selector"
            android:padding="16dp" />

    </RelativeLayout>

</LinearLayout>