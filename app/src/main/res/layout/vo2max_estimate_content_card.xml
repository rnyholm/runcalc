<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vo2max_estimate_content_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_card_background"
    android:orientation="vertical"
    android:paddingStart="6dp"
    android:paddingTop="4dp"
    android:paddingEnd="6dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/calculate_vo2max_estimate_heading_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/calculate_vo2max_estimate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:autoLink="web"
            android:contextClickable="true"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/calculate_xx"
            android:textColor="@color/colorHeadingText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:contentDescription="@string/image_link_content_descriptor"
            android:focusable="true"
            app:srcCompat="@drawable/open_in_new" />

    </LinearLayout>

    <TextView
        android:id="@+id/calculate_vo2max_estimate_descr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/calculate_vo2max_estimate_description"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/calculate_vo2max_estimate_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ax.stardust.runcalc.component.KeyboardlessEditText
            android:id="@+id/calculate_vo2max_estimate_cooper_test_result_et"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input_default"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:gravity="center_horizontal"
            android:hint="@string/default_speed_distance"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/colorInputText"
            android:textCursorDrawable="@drawable/input_cursor_default" />

        <TextView
            android:id="@+id/calculate_vo2max_estimate_results_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_weight="100"
            android:fontFamily="@font/open_sans"
            android:text="@string/calculate_vo2max_estimate_results"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>