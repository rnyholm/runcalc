<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculations_content_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_card_background"
    android:orientation="vertical"
    android:paddingStart="6dp"
    android:paddingTop="4dp"
    android:paddingEnd="6dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/calculate_pace_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/calculate_xx"
        android:textColor="@color/colorHeadingText"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/calculate_pace_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/calculate_pace_description_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calculate_pace_distance_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/hint_distance"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calculate_pace_time_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/hint_time"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calculate_pace_result_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/pace"
                android:textColor="@color/colorText"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calculate_pace_options_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ax.stardust.runcalc.component.widget.KeyboardlessEditText
                android:id="@+id/calculate_pace_distance_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_default"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:hint="@string/default_speed_distance_km"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/colorInputText"
                android:textCursorDrawable="@drawable/input_cursor_default" />

            <ax.stardust.runcalc.component.widget.KeyboardlessEditText
                android:id="@+id/calculate_pace_time_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/input_default"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:hint="@string/default_time"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/colorInputText"
                android:textCursorDrawable="@drawable/input_cursor_default" />

            <TextView
                android:id="@+id/calculate_pace_results_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/calculate_pace_results"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/calculate_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/calculate_xx"
        android:textColor="@color/colorHeadingText"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/calculate_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/calculate_time_description_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calculate_time_distance_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/hint_distance"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calculate_time_pace_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/hint_pace"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calculate_time_result_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/time"
                android:textColor="@color/colorText"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calculate_time_options_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ax.stardust.runcalc.component.widget.KeyboardlessEditText
                android:id="@+id/calculate_time_distance_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_default"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:hint="@string/default_speed_distance_km"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/colorInputText"
                android:textCursorDrawable="@drawable/input_cursor_default" />

            <ax.stardust.runcalc.component.widget.KeyboardlessEditText
                android:id="@+id/calculate_time_pace_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/input_default"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:hint="@string/default_pace"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/colorInputText"
                android:textCursorDrawable="@drawable/input_cursor_default" />

            <TextView
                android:id="@+id/calculate_time_results_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/calculate_time_results"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/calculate_distance_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/calculate_xx"
        android:textColor="@color/colorHeadingText"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/calculate_distance_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/calculate_distance_description_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calculate_distance_time_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/hint_time"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calculate_distance_pace_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/hint_pace"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/calculate_distance_result_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="@string/distance"
                android:textColor="@color/colorText"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calculate_distance_options_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ax.stardust.runcalc.component.widget.KeyboardlessEditText
                android:id="@+id/calculate_distance_time_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_default"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:hint="@string/default_time"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/colorInputText"
                android:textCursorDrawable="@drawable/input_cursor_default" />

            <ax.stardust.runcalc.component.widget.KeyboardlessEditText
                android:id="@+id/calculate_distance_pace_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/input_default"
                android:ems="10"
                android:fontFamily="@font/open_sans"
                android:gravity="center_horizontal"
                android:hint="@string/default_pace"
                android:selectAllOnFocus="true"
                android:singleLine="true"
